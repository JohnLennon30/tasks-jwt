<div class="row">
    <div class="col-md-12 mb-4">
        <div class="d-flex justify-content-between align-items-center">
            <h2>Minhas Tarefas</h2>
            <a href="/tasks/new" class="btn btn-primary">Nova Tarefa</a>
        </div>
    </div>
</div>

<div class="row">
    <% tasks.forEach(function(task) { %>
        <div class="col-md-4 mb-4">
            <div class="card <%= task.completed ? 'border-success' : '' %>">
                <div class="card-body">
                    <h5 class="card-title <%= task.completed ? 'text-decoration-line-through' : '' %>">
                        <%= task.title %>
                    </h5>
                    <p class="card-text <%= task.completed ? 'text-decoration-line-through' : '' %>">
                        <%= task.description %>
                    </p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <a href="/tasks/edit/<%= task.id %>" class="btn btn-sm btn-outline-secondary">Editar</a>
                            <form action="/tasks/<%= task.id %>/complete" method="POST" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-outline-success">
                                    <%= task.completed ? 'Descompletar' : 'Completar' %>
                                </button>
                            </form>
                            <form action="/tasks/<%= task.id %>/delete" method="POST" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-outline-danger" 
                                        onclick="return confirm('Tem certeza que deseja excluir esta tarefa?')">
                                    Excluir
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="card-footer text-muted">
                    <small>Criada em: <%= new Date(task.createdAt).toLocaleDateString() %></small>
                </div>
            </div>
        </div>
    <% }); %>
</div>

<% if (tasks.length === 0) { %>
    <div class="text-center mt-4">
        <p>Você ainda não tem tarefas. <a href="/tasks/new">Criar uma nova tarefa</a></p>
    </div>
<% } %>
